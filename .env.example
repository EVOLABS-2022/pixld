# Environment Configuration for NFT Art Marketplace

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# Abstract Network RPC URL (testnet)
NEXT_PUBLIC_ABSTRACT_RPC_URL=https://api.testnet.abs.xyz

# Abstract Network Chain ID (11124 for testnet)
NEXT_PUBLIC_CHAIN_ID=11124

# Contract Addresses (update after deployment)
NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x0000000000000000000000000000000000000001
NEXT_PUBLIC_COLLECTION_FACTORY_ADDRESS=0x0000000000000000000000000000000000000002
NEXT_PUBLIC_ROYALTY_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000003
NEXT_PUBLIC_OPERATOR_ALLOWLIST_ADDRESS=0x0000000000000000000000000000000000000004

# ============================================
# API & DATA LAYER
# ============================================

# The Graph Subgraph URL
NEXT_PUBLIC_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/your-username/art-marketplace

# API Base URL (for development)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Database URL (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/art_marketplace

# ============================================
# IPFS & STORAGE
# ============================================

# IPFS Gateway URL
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/

# Web3.Storage API Token (for IPFS uploads)
WEB3_STORAGE_API_TOKEN=your_web3_storage_token_here

# Pinata API Keys (alternative IPFS provider)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt_token

# ============================================
# EXTERNAL SERVICES
# ============================================

# Alchemy API Key (for enhanced RPC)
ALCHEMY_API_KEY=your_alchemy_api_key

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key

# Abstract Explorer API (if available)
ABSTRACT_EXPLORER_API_KEY=your_abstract_explorer_key

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment (development, staging, production)
NODE_ENV=development

# Application Name
NEXT_PUBLIC_APP_NAME="Art Marketplace"

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Support Email
NEXT_PUBLIC_SUPPORT_EMAIL=support@artmarketplace.com

# ============================================
# SECURITY & AUTHENTICATION
# ============================================

# NextAuth.js Secret (for sessions)
NEXTAUTH_SECRET=your_nextauth_secret_here

# NextAuth URL
NEXTAUTH_URL=http://localhost:3000

# JWT Secret (for API authentication)
JWT_SECRET=your_jwt_secret_here

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Google Analytics ID
NEXT_PUBLIC_GA_ID=GA_MEASUREMENT_ID

# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# PostHog API Key (for analytics)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key

# ============================================
# DEVELOPMENT & TESTING
# ============================================

# Enable debug mode
DEBUG=false

# Mock data in development
NEXT_PUBLIC_USE_MOCK_DATA=true

# Skip wallet connection in tests
NEXT_PUBLIC_SKIP_WALLET_CHECK=false

# Test wallet private key (testnet only!)
TEST_PRIVATE_KEY=your_test_private_key_here

# ============================================
# PRODUCTION OVERRIDES
# ============================================

# Production RPC URL
NEXT_PUBLIC_ABSTRACT_MAINNET_RPC_URL=https://api.abs.xyz

# Production Subgraph
NEXT_PUBLIC_PRODUCTION_SUBGRAPH_URL=your_production_subgraph_url

# Production Database
PRODUCTION_DATABASE_URL=your_production_database_url

# CDN URL for static assets
NEXT_PUBLIC_CDN_URL=https://cdn.artmarketplace.com

# ============================================
# ADDITIONAL NOTES
# ============================================

# 1. Copy this file to .env.local for development
# 2. Update contract addresses after deployment
# 3. Never commit real private keys or API tokens
# 4. Use different values for staging and production
# 5. Ensure all team members have access to required API keys